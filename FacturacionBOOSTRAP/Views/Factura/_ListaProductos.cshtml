@model FacturacionBOOSTRAP.Models.FacturaModel

@using (Html.BeginForm("GuardarFactura", "Factura"))
{
    <!--Mantenemos las propiedades del modelo-->
    @Html.HiddenFor(m => m.Cantidad)
    @Html.HiddenFor(m => m.IdProducto)
    @Html.HiddenFor(m => m.NumeroCliente)
    @Html.HiddenFor(m => m.Total)


    <!--Creamos la tabla que mostraremos-->
    <table class="table table-hover">
        <tr style="background-color:#4d394b; color:white;">
            <th>@Html.Label("Cantidad")</th>
            <th>@Html.Label("Codigo Producto")</th>
            <th>@Html.Label("Sub-total")</th>
        </tr>


        @for (int i = 0; i < Model.ListaDetalle.Count(); i++)
        {
            <tr>
                <td>
                    @Html.DisplayTextFor(m => m.ListaDetalle[i].Cantidad)
                    @Html.HiddenFor(m => m.ListaDetalle[i].Cantidad)
                </td>
                <td>
                    @Html.DisplayTextFor(m => m.ListaDetalle[i].IdProducto)
                    @Html.HiddenFor(m => m.ListaDetalle[i].IdProducto)
                </td>
                <td>
                    @Html.DisplayTextFor(m => m.ListaDetalle[i].SubTotal)
                    @Html.HiddenFor(m => m.ListaDetalle[i].SubTotal)
                </td>
            </tr>
        }
    </table>

    <!--Creamos la nueva fila donde se mostrara el total-->
    <div class="row text-center">
        <p><strong>Total: @Model.Total</strong></p>
    </div>

    <div class="row"></div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-4 text-center">
            <input type="submit" value="Guardar" class="btn btn-success" />
            <button class="btn btn-default">
                @Html.ActionLink("Cancelar", "MenuNuevo", "Home")
            </button>
        </div>
    </div>
    <br />

}