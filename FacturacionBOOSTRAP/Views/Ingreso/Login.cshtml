@model FacturacionBOOSTRAP.Models.UsuarioModel

@{
    Layout = null;
}

<!--Validamos si hubo un error y desplegamos un mensaje-->
<!---->

<!DOCTYPE html>
<html>
<head>
    <!--Colocamos el icono que creamos para la pestaña-->
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/img/1626Logomin.ico">

    <title>SF - Luis Lopez</title>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--Importamos las fuentes de Google-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <!--JQuery y Materialize PONERLOS ANTES QUE LOS SCRIPTS-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <!-- JavaScript ya compilado-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
</head>
<!--Estilo de la imagen de Carga-->
<body onload="Espera()" style="padding:0px; margin:0px; overflow:hidden; background: url(../../Content/img/Logo.png) no-repeat fixed; background-size: cover">

    <div class="container fixed-top" id="MientrasCarga">
        <div class="progress" style="background-color: #ede7f6">
            <div class="indeterminate" style="background-color: #7b1fa2"></div>
        </div>
    </div>

    <!--Lo que se mostrara mientras se carga la pagina Imagen y animacion-->
    <div class="container" id="DespuesCarga" style="display: none;">
        <div class="row center-align">
            <div class="col s0 m3">
                <!--Es solo para darle margen inicial cuando achicamos no va a estar-->
            </div>
            <div class="col s12 m6">
                <div class="col s0 m1">
                    <!--Es solo para darle margen inicial cuando achicamos no va a estar-->
                </div>
                <!--Arranca el Modelo-->
                <div id="modal1" class="modal col m4" style="bottom: 10%; top: 10%;">
                    <div class="modal-content">
                        <!--Comienza el formulario-->
                        @using (Html.BeginForm())
                        {
                            <form class="col s12" method="post">
                                <div class="row">
                                    <i class="material-icons" style="color:rebeccapurple; font-size:800%;">account_circle</i>
                                    <h4>Iniciar Sesion</h4>
                                    <p>@Html.ValidationSummary(false,"",htmlAttributes: new { @style = "color:red;" })</p>
                                </div>
                                <div class="input-field col s12 m12">
                                    <input id="Nombregjgj" name="Usuario" type="text" class="validate">
                                    <label for="Nombregjgj">Usuario</label>
                                </div>
                                <div class="input-field col s12 m12">
                                    <input id="idcontrasena" name="Contrasena" type="password" class="validate">
                                    <label for="idcontrasena">Contraseña</label>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn waves-effect waves-light" type="submit" name="action">
                                        Entrar
                                        <i class="material-icons right">send</i>
                                    </button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
                <!--Termina Modelo-->
                <div class="col s0 m1">
                    <!--Es solo para darle margen final cuando achicamos no va a estar-->
                </div>
            </div>
            <div class="col s0 m3">
                <!--Es solo para darle margen final cuando achicamos no va a estar-->
            </div>
        </div>

    </div>
    <!--Quedo bien, ahora hay que hacerlo responsive para que al achicar todo quede en su lugar-->
    <!--######################## SCRIPTS ########################-->
    <!--Creamos la funcion que se ejecutara cuando se termine de cargar-->
    <script type="text/javascript">
        var unaVariable;

        function Espera() {
            /*SetTimeout ejecuta algo luego de un tiempo de espera en milisegundos*/
            unaVariable = setTimeout(LuegoEspera, 5000)
        }
        function LuegoEspera() {
            /*Luego de la espera, desactivamos lo que se ve MIENTRASCARGA y activamos DESPUESCARGA */
            document.getElementById("MientrasCarga").style.display = "none";
            document.getElementById("DespuesCarga").style.display = 'block';
            $(document).ready(function () {
                $("#modal1").modal({ dismissible: false }).modal('open')
            })
        }
    </script>
    <!--######################## SCRIPTS ########################-->
</body>
</html>