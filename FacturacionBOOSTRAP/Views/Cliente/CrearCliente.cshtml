@model FacturacionBOOSTRAP.Models.ClienteModel

@{
    ViewBag.Title = "SF - CrearCliente";
}
<!--JQuery-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<!--Estilo del datepicker-->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.5.0/css/bootstrap-datepicker.min.css" />
<!--Script del datepicker-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.5.0/js/bootstrap-datepicker.min.js"></script>

<!--Llamamos a la activacion y al formato del datepicker que creamos-->
<script src="~/Content/MiDatePicker.js"></script>

<!--Importamos el estilo de los iconos-->
<link rel="stylesheet" href="~/Content/EstiloLogos.css" />

<div class="jumbotron" style="background-color:#4d394b;">
    <h1 style="color:white; text-align:center;">Crear Cliente</h1>
    <p style="color:white; text-align:center;">Complete los campos para crear un cliente.</p>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid text-center text-center">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <br>
        <div class="row">
            <div class="col-md-3">
                <span class="glyphicon glyphicon-briefcase logo"></span>
                <h4>Cedula del Cliente:</h4>
                <div class="form-group">
                    @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-3">
                <span class="glyphicon glyphicon-calendar logo"></span>
                <h4>Fecha de Nacimiento:</h4>
                <div class="form-group">
                    @*Agregamos el id fecha a htmlAttributes para que se active el DateTimePicker*@
                    @Html.EditorFor(model => model.FechaNacimiento, new { htmlAttributes = new { @class = "form-control", @id = "fecha" } })
                    @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-3">
                <span class="glyphicon glyphicon-user logo"></span>
                <h4>Nombre del Cliente:</h4>
                <div class="form-group">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-3">
                <span class="glyphicon glyphicon-home logo"></span>
                <h4>Domicilio del Cliente:</h4>
                <div class="form-group">
                    @Html.EditorFor(model => model.Domicilio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Domicilio, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <br />

    <div class="row">
        <!--Boton de guardado, lo centramos con el offset y le decimos que lo alinee al medio con text-center-->
        <div class="form-group">
            <div class="col-md-offset-4 col-md-4 text-center">
                <input type="submit" value="Agregar" class="btn btn-success" />
                <button class="btn btn-default">
                    @Html.ActionLink("Volver", "MenuNuevo", "Home")
                </button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
