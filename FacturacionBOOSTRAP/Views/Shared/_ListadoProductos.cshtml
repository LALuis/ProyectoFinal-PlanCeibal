@model IEnumerable<FacturacionBOOSTRAP.Models.ProductoModel>

<!--Importamos el estilo de la tabla-->
<link rel="stylesheet" href="~/Content/BusquedaEnTabla.css" />

@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Codigo")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayName("Registrado por")
            </th>
            <th><input class="form-control" id="miEntrada" type="text" placeholder="Buscar producto..."></th>
        </tr>
        <tbody id="miTabla">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NickUsuario)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "EditarProducto", new { Producto = item.Id }) |
                        <!--El detalle no es necesario porque se ve en la propia tabla-->
                        @*Html.ActionLink("Detalles", "MostrarProducto", new { Producto = item.Id }) |*@
                        <button class="btn btn-danger">
                            @Html.ActionLink("Eliminar", "EliminarProducto", new { Producto = item.Id}, new { @style = "text-decoration:none; color:white;" })
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!--Script de busqueda en la tabla-->
    <script src="~/Content/BusquedaEnTabla.js"></script>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Codigo")
            </th>
            <th>
                @Html.DisplayName("Nombre")
            </th>
            <th>
                @Html.DisplayName("Marca")
            </th>
            <th>
                @Html.DisplayName("Precio")
            </th>
            <th>
                @Html.DisplayName("Registrado por")
            </th>
    </table>
    <p style="text-align:center;"><strong>No hay productos para mostrar</strong></p>
}
