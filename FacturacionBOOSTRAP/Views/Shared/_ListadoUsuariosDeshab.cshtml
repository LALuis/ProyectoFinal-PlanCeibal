@model IEnumerable<FacturacionBOOSTRAP.Models.UsuarioModel>

<!--Importamos el estilo de la tabla-->
<link rel="stylesheet" href="~/Content/BusquedaEnTabla.css" />


<!--Controlamos que la lista no venga vacia-->
@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Usuario")
            </th>
            <th>
                @Html.DisplayName("Administrador")
            </th>
            <th>
                @Html.DisplayName("Contarseña")
            </th>
            <th><input class="form-control" id="miEntrada" type="text" placeholder="Ingrese Usuario..."></th>
        </tr>
        <tbody id="miTabla">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Usuario
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EsAdmin)
                    </td>
                    <td>
                        @Html.Label("**********")
                    </td>
                    <td>
                        <button class="btn btn-success">
                            @Html.ActionLink("Habilitar", "HabilitarUsuario", new { Usuario = item.Usuario }, new { @style = "text-decoration:none; color:white;" })
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!--Script de busqueda en la tabla-->
    <script src="~/Content/BusquedaEnTabla.js"></script>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Usuario")
            </th>
            <th>
                @Html.DisplayName("Administrador")
            </th>
            <th>
                @Html.DisplayName("Contarseña")
            </th>
        </tr>
    </table>
    <p style="text-align:center;"><strong>No hay usuarios deshabilitados</strong></p>
}
