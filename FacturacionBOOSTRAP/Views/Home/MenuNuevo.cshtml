@model FacturacionBOOSTRAP.Models.DatosModel

@{
    ViewBag.Title = "SF - Menu Nuevo";
}
<!--Declaramos una variable que contendra el usuario de nuestra session-->
@{
    FacturacionBOOSTRAP.Models.UsuarioModel usuarioActual = (FacturacionBOOSTRAP.Models.UsuarioModel)Session["Logueado"];
}

<!--Importamos el diseño del panel-->
<link href="~/Content/PanelesMenuNuevo.css" rel="stylesheet" />

<!--DAMOS MARGEN SUPERIOR-->
<div class="row">
    <br /><br /><br /><br />
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <h1>Factura</h1>
                </div>
                <!--Ajustamos con padding para que queden del mismo tamaño-->
                <div class="panel-body" style="padding-bottom:9%;">
                    <p><strong>@Html.DisplayFor(model => model.FacturasRegistradas)</strong> Facturas registradas</p>
                    <p><strong>$@Html.DisplayFor(model => model.TotalFacturado)</strong> Facturados</p>
                </div>
                <div class="panel-footer">
                    <h3><span class="glyphicon glyphicon-file" style="font-size:50px; color:#4d394b;"></span></h3>
                    <h4>Desea agregar una Factura?</h4>
                    <a href="@Url.Action("CrearFactura","Factura")" class="btn btn-lg">Agregar</a>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <h1>Producto</h1>
                </div>
                <div class="panel-body">
                    <br />
                    <p><strong>@Html.DisplayFor(model => model.ProductosRegistrados)</strong> Productos registrados</p>
                    <br />
                </div>
                <div class="panel-footer">
                    <h3><span class="glyphicon glyphicon-tag" style="font-size:50px; color:#4d394b;"></span></h3>
                    <h4>Desea agregar un producto?</h4>
                    <a href="@Url.Action("CrearProducto","Producto")" class="btn btn-lg">Agregar</a>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <h1>Usuario</h1>
                </div>
                <div class="panel-body">
                    <br />
                    <p><strong>@Html.DisplayFor(model => model.UsuariosRegistrados)</strong> Usuarios</p>
                    <br />
                </div>
                <div class="panel-footer">
                    <h3><span class="glyphicon glyphicon-user" style="font-size:50px; color:#4d394b;"></span></h3>
                    <h4>Desea agregar un usuario?</h4>
                    @if (usuarioActual != null && usuarioActual.EsAdmin == true)
                    {
                        <a href="@Url.Action("CrearUsuario","Usuario")" class="btn btn-lg">Agregar</a>
                    }
                    else
                    {
                        /*El usuario no es administrador, por lo tanto no puede acceder(Hover es para que se muestre cuando pasamos por arriba con el mouse)*/
                        <a href="#!" class="btn btn-lg" title="Acceso Restringido" data-trigger="hover" data-toggle="popover" data-content="Contenido disponible solo para administradores">Agregar</a>
                    }
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <h1>Cliente</h1>
                </div>
                <div class="panel-body">
                    <br />
                    <p><strong>@Html.DisplayFor(model => model.TotalClientesRegistrados)</strong> Clientes registrados</p>
                    <br />
                </div>
                <div class="panel-footer">
                    <h3><span class="glyphicon glyphicon-eye-open" style="font-size:50px; color:#4d394b; "></span></h3>
                    <h4>Desea agregar un cliente?</h4>
                    <a href="@Url.Action("CrearCliente","Cliente")" class="btn btn-lg">Agregar</a>
                </div>
            </div>
        </div>
    </div>
</div>


<!--Script popover contenido de administradores-->
<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover();
    });
</script>