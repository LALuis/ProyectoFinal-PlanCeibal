@model FacturacionBOOSTRAP.Models.DatosModel

@{
    ViewBag.Title = "SF - Datos";
}

<style>
    /*Color de iconos*/
    .logo {
        color: #4d394b;
        font-size: 50px;
    }
}</style>

    <div class="jumbotron" style="background-color:#4d394b;">
        <h1 style="color:white; text-align:center;">Datos</h1>
        <p style="color:white; text-align:center;">Datos referentes al negocio</p>
    </div>

    <br>
<div class="container-fluid text-center">
    <div class="row">
        <div class="col-sm-4">
            <span class="glyphicon glyphicon-bitcoin logo"></span>
            <h4>$ @Html.DisplayFor(model => model.TotalFacturado)</h4>
            <p>Se han facturado en total.</p>
        </div>
        <div class="col-sm-4">
            <span class="glyphicon glyphicon-file logo"></span>
            <h4>@Html.DisplayFor(model => model.FacturasRegistradas)</h4>
            <p>Facturas han sido registradas<br /> hasta el momento.</p>
        </div>
        <div class="col-sm-4">
            <span class="glyphicon glyphicon-eye-open logo"></span>
            <h4>@Html.DisplayFor(model => model.TotalClientesRegistrados)</h4>
            <p>Clientes se han registrado<br /> hasta el momento.</p>
        </div>
    </div>
    <br><br>
    <div class="row">
        <div class="col-sm-6">
            <span class="glyphicon glyphicon-tag logo"></span>
            <h4>@Html.DisplayFor(model => model.ProductosRegistrados)</h4>
            <p>Productos se han registrado <br />hasta el momento.</p>
        </div>
        <div class="col-sm-6">
            <span class="glyphicon glyphicon-user logo"></span>
            <h4>@Html.DisplayFor(model => model.UsuariosRegistrados)</h4>
            <p>Usuarios en el sistema</p>
        </div>
    </div>
</div>
